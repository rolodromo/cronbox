#!/usr/bin/env node
require('dotenv').config()

const request = require("request-promise")

const {
  TWEET_URL,
  AUTH_TOKEN
} = process.env // eslint-disable-line no-process-env
const DRY_RUN = false

const options = {
  method: 'POST',
  url: TWEET_URL,
  headers: {
    'x-admin-token': AUTH_TOKEN
  },
  body: { dryRun: DRY_RUN  },
  json: true 
}

request(options)
.then(res => {
  console.log('Tweeted', (new Date()).toISOString())
})
.catch(e => {
  console.log('Error', e)
})


